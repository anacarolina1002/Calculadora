<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="200dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="52sp" />

    <TextView
        android:id="@+id/tvOperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom">

        <!-- Linha 1: Botões Limpar e Voltar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLimpar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueLimpar"
                android:text="C"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueVoltar"
                android:text="⌫"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Linha 2: Botões Numéricos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="7"
                android:text="7"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="8"
                android:text="8"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="9"
                android:text="9"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnDividir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueOperador"
                android:tag="/"
                android:text="/"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Linha 3: Botões Numéricos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="4"
                android:text="4"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="5"
                android:text="5"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="6"
                android:text="6"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueOperador"
                android:tag="*"
                android:text="*"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Linha 4: Botões Numéricos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="1"
                android:text="1"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="2"
                android:text="2"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="3"
                android:text="3"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnSubtrair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueOperador"
                android:tag="-"
                android:text="-"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Linha 5: Botões Numéricos e Resultado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="0"
                android:text="0"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnPonto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueNumero"
                android:tag="."
                android:text="."
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnAdicionar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueOperador"
                android:tag="+"
                android:text="+"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCliqueIgual"
                android:text="="
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
